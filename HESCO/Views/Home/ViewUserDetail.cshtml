@model HESCO.Models.UserData

@{
    ViewData["Title"] = "View User Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <h1 style="text-align:center">User Details</h1>
                    <hr />
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th>Username</th>
                                <td>@Html.DisplayFor(model => model.Username)</td>
                            </tr>
                            <tr>
                                <th>Password</th>
                                <td>@Html.DisplayFor(model => model.Password)</td>
                            </tr>
                              <tr>
                                <th>Name</th>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                            <tr>
                                <th>ContactNumber</th>
                                <td>@Html.DisplayFor(model => model.ContactNumber)</td>
                            </tr>
                            <tr>
                                <th>UserRole</th>
                                <td>@Html.DisplayFor(model => model.UserRole)</td>
                            </tr>
                            <tr>
                                <th>Team</th>
                                <td>@Html.DisplayFor(model => model.Team)</td>
                            </tr>                         
                        </tbody>
                    </table>
                    <div>
                        <a asp-action="ViewUser" asp-controller="Home" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
