                     let treeEventsBound = false;   // Prevent double binding
        let previousRights = [];       // Stores pre-assigned rights

        // 1️⃣ Fetch assigned RBAC IDs for the selected role
        function GetRightofRoleTree(role_id) {
            $.ajax({
                url: '@Url.Action("GetRightofRoleTree", "Home")',
                type: 'GET',
                data: { role_id: role_id },
                success: function (data) {
                    // Convert all IDs to number for safe comparison
                    previousRights = data.assignedIds.map(Number);

                    // Render the tree after fetching assigned rights
                    ShowRoleRights();
                },
                error: function () {
                    alert("Failed to load role rights.");
                }
            });
        }

        // 2️⃣ Render the hierarchical RBAC tree
        function ShowRoleRights() {
            $.ajax({
                url: '@Url.Action("GetUserRbacTree", "Home")',
                type: 'GET',
                success: function (data) {
                    // Build map for parent-child relationships
                    const map = {};
                    const roots = [];

                    data.forEach(item => {
                        item.children = [];
                        map[item.id] = item;
                    });

                    data.forEach(item => {
                        if (item.parent_id && map[item.parent_id]) {
                            map[item.parent_id].children.push(item);
                        } else {
                            roots.push(item);
                        }
                    });

                    // Recursive function to render tree HTML
                    function renderTree(nodes) {
                        let html = "<ul>";

                        nodes.forEach(node => {
                            const hasChildren = node.children.length > 0;
                            const label = !node.parent_id ? (node.controller || "") : (node.action || "");

                            const isChecked = previousRights.includes(node.id) ? "checked" : "";

                            html += `<li>`;
                            html += hasChildren ? `<span class="tree-toggle">[+]</span>` : `<span class="tree-spacer"></span>`;
                            html += `<input type="checkbox" class="rbac-checkbox" value="${node.id}" ${isChecked}>
                                     <label>${label}</label>`;

                            if (hasChildren) {
                                html += renderTree(node.children);
                            }

                            html += `</li>`;
                        });

                        html += "</ul>";
                        return html;
                    }

                    // Insert tree into DOM
                    $("#rbacTree").html(renderTree(roots));

                    // Collapse all sub-levels initially
                    $("#rbacTree ul ul").hide();

                    // Bind events once
                    if (!treeEventsBound) {
                        // Expand / collapse
                        $(document).on("click", ".tree-toggle", function () {
                            const target = $(this).closest("li").children("ul");
                            if (target.is(":visible")) {
                                target.slideUp(150);
                                $(this).text("[+]");
                            } else {
                                target.slideDown(150);
                                $(this).text("[-]");
                            }
                        });

                        // Checkbox logic: down + up propagation
                        $(document).on("change", ".rbac-checkbox", function () {
                            const checked = this.checked;

                            // Downward: check/uncheck all children
                            $(this).closest("li").find(".rbac-checkbox").prop("checked", checked);

                            // Upward: check parents if any child is checked
                            $(this).parents("ul").each(function () {
                                const parentLi = $(this).closest("li");
                                const anyChildChecked = $(this).find("> li > input.rbac-checkbox:checked").length > 0;
                                parentLi.children("input.rbac-checkbox").prop("checked", anyChildChecked);
                            });
                        });

                        treeEventsBound = true; // prevent rebinding
                    }
                },
                error: function () {
                    alert("Failed to load RBAC tree.");
                }
            });
        }

        // 3️⃣ Usage: call when role dropdown changes
        $("#userRoleSelect").on("change", function () {
            const roleId = $(this).val();
            if (roleId) {
                GetRightofRoleTree(roleId);
            } else {
                // Clear tree if no role selected
                $("#rbacTree").empty();
                previousRights = [];
            }
        });

        $('form').on('submit', function () {

            // clear previous hidden inputs
            $("#selectedRightsContainer").empty();

            // loop through all checked checkboxes
            $(".rbac-checkbox:checked").each(function () {

                var id = $(this).val();
