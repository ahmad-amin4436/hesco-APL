        document.getElementById("togglePassword").addEventListener("click", function () {
            var passwordInput = document.getElementById("password");
            var icon = this.querySelector("i");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        });
        document.getElementById("userRoleSelect").addEventListener("change", function () {
            var selectedRoleId = this.value; // Get selected role ID
            var teamDropdown = document.getElementById("teamDropdown");
            if(!selectedRoleId){
                $('#Rights_DDL').hide();
            }
            else{
                 ShowRoleRights(selectedRoleId);
            }
            // Check if the role ID matches 3, 4, or 19
            if (selectedRoleId === "3" || selectedRoleId === "4" || selectedRoleId === "19") {
                teamDropdown.style.display = "block";
            } else {
                teamDropdown.style.display = "none";
                document.getElementById("teamDropdown").querySelector("select").selectedIndex = -1; // Clear selection
            }
        });
         function ShowRoleRights(roleId) {
            $.ajax({
                url: '@Url.Action("GetRoleRights", "Home")',
                type: 'GET',
                data: { role_id: roleId },
                dataType: 'json',
                success: function(response) {
                    $('#userRightsSelect').empty();
                                    $('#Rights_DDL').show();

                    // Map DTO fields (Id, Action) to Value/Text
                    $.each(response, function(index, result) {
                        debugger;
                        $('#userRightsSelect').append(
                            $('<option>', {
                                value: result.id,
                                text: result.title
                            })
                        );
                    });
                },
                error: function(xhr, status, error) {
                    console.error('Error fetching role rights:', error);
                    alert('Failed to load role rights.');
                }
            });
        }
        // Ensure team dropdown is shown/hidden correctly on page load
        document.getElementById("userRoleSelect").dispatchEvent(new Event("change"));
