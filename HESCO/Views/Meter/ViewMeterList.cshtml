<div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
    <div class="card">
        <div class="card-body p-3">
            <h1 style="text-align:center">Meters</h1>
            <div class="row mb-2">
                <div class="col-md-12 text-right">
                    <a href="@Url.Action("CreateMeter", "Meter")" class="btn btn-success">Create New</a>
                    <button id="exportExcelBtn" class="btn btn-danger">Export to Excel</button>
                    <button id="clearFiltersBtn" class="btn btn-primary">Clear Filters</button>
                </div>
            </div>
            <div class="row mb-2">
                <input type="hidden" id="hiddenPageSize" value="@ViewBag.PageSize" />
                <label style="font-size:14px" for="pageSizeSelector">Items per page:</label>
                <div class="col-md-1 text-right">
                    <select id="pageSizeSelector" class="form-control">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="75">75</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
            <p style="color: blue; font-weight: bold;">
                Showing @((page * pageSize) - pageSize + 1) to @(Math.Min(totalRecords, page * pageSize)) of @(totalRecords) records
            </p>

            <table style="font-size:11px" class="table center_text">
                <thead>
                    <tr>
                        <th>MSN</th>
                        <th>Description</th>
                        <th>Meter Type</th>
                        <th>Comments</th>
                        <th>Status</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Map Flag</th>
                        <th>Project Name</th>
                        <th>MeterMode</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th class="suggestion-container">
                            <input type="text" class="filter-input" data-filter="msn" placeholder="Search MSN" value="@ViewData["MSN"]">
                            <ul id="suggestions-msn" class="suggestions-box" style="display:none;"></ul>
                        </th>
                        <th></th>
                        <th class="suggestion-container">
                            <input type="text" class="filter-input" data-filter="metertype" placeholder="Search meterType" value="@ViewData["MeterType"]">
                            <ul id="suggestions-metertype" class="suggestions-box" style="display:none;"></ul>
                        </th>
                        <th></th>
                        <th>
                            <select id="status" class="filter-dropdown  form-control c-filters" asp-items="ViewBag.SelectStatus"></select>
                        </th>                       
                        <th> <input type="date" id="createdAtFilter" name="createdAtFilter" class="form-control c-filters" value="@ViewBag.CreatedDate"></th>
                        <th>
                            <select id="createdByFilter" class="filter-dropdown form-control c-filters" asp-items="ViewBag.SelectCreatedBy"></select>
                        </th>
                        <th>
                            <select id="mapflagFilter" class="filter-dropdown  form-control c-filters" style="width:80%" asp-items="ViewBag.SelectMapFlag"></select>
                        </th>
                        <th>
                            <select id="ProjectNameFilter" class="filter-dropdown form-control c-filters" asp-items="ViewBag.SelectProject"></select>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meter in Model)
                    {
                        <tr>
                            <td>@meter.MSN</td>
                            <td>@meter.Description</td>
                            <td>@meter.MeterType</td>
                            <td>@(string.IsNullOrEmpty(meter.Comments) ? "-" : meter.Comments)</td>
                            <td>@meter.MeterStatusDisplay</td>
                            <td>@meter.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@meter.CreatedByUsername</td>
                            <td>@meter.MapFlagDisplay</td>
                            <td>@meter.ProjectName</td>
                            <td>@meter.MeterMode</td>
                            <td>
                                @if (meter.MapFlag == 1)
                                {
                                    <span style="color:grey; cursor:not-allowed;">
                                        <i class="fas fa-edit "></i>
                                    </span>
                                }
                                else
                                {
                                    @Html.Raw("<a href=\"" + Url.Action("EditMeterDetails", new { id = meter.MeterId }) + "\" title=\"EditDetails\"><i class=\"fas fa-edit\" style=\"color:green;\"></i></a>")
                                }
                                @Html.Raw("| <a href=\"" + Url.Action("ViewMeterDetails", new { id = meter.MeterId }) + "\" title=\"ViewDetails\"><i class=\"fas fa-eye\" style=\"color:green;\"></i></a> | ")
                                <a href="@Url.Action("ConfirmDelete", new { id = meter.MeterId })" title="Delete Meter">
                                    <i class="fas fa-trash-alt" style="color:red;"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="pagination">
    <ul class="pagination-list">
        @if (ViewData["totalPages"] != null)
        {
            var currentPage = (int)ViewData["page"];
            var totalPage = (int)ViewData["totalPages"];

            // Calculate the range of pages to show
            var startPage = Math.Max(1, currentPage - 5);
            var endPage = Math.Min(totalPage, currentPage + 4);

            if (endPage - startPage < 9) // Ensure we have 10 pages shown
            {
                if (startPage == 1)
                {
                    endPage = Math.Min(totalPage, startPage + 9);
                }
                else if (endPage == totalPage)
                {
                    startPage = Math.Max(1, endPage - 9);
                }
            }

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a href="@Url.Action("ViewMeterList", new { page = 1, status = Context.Request.Query["status"],ProjectNameFilter = Context.Request.Query["Project"], msnFilter = Context.Request.Query["msnFilter"], createdByFilter = Context.Request.Query["createdByFilter"], createdAtFilter = Context.Request.Query["createdAtFilter"],  mapFlag = ViewData["MapFlag"],pageSize = ViewData["pageSize"] })">&laquo;&laquo;</a>
            </li>

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a href="@Url.Action("ViewMeterList", new { page = Math.Max(1, currentPage - 1), status = Context.Request.Query["status"],ProjectNameFilter = Context.Request.Query["Project"], msnFilter = Context.Request.Query["msnFilter"], createdByFilter = Context.Request.Query["createdByFilter"], createdAtFilter = Context.Request.Query["createdAtFilter"] ,  mapFlag = ViewData["MapFlag"] , pageSize = ViewData["pageSize"] })">&laquo;</a>
            </li>

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a href="@Url.Action("ViewMeterList", new { page = i, status = Context.Request.Query["status"],ProjectNameFilter = Context.Request.Query["Project"], msnFilter = Context.Request.Query["msnFilter"], createdByFilter = Context.Request.Query["createdByFilter"], createdAtFilter = Context.Request.Query["createdAtFilter"],  mapFlag = ViewData["MapFlag"], pageSize = ViewData["pageSize"] })">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPage ? "disabled" : "")">
                <a href="@Url.Action("ViewMeterList", new { page = Math.Min(totalPage, currentPage + 1), status = Context.Request.Query["status"],ProjectNameFilter = Context.Request.Query["Project"], msnFilter = Context.Request.Query["msnFilter"], createdByFilter = Context.Request.Query["createdByFilter"],  mapFlag = ViewData["MapFlag"], createdAtFilter = Context.Request.Query["createdAtFilter"], pageSize = ViewData["pageSize"] })">&raquo;</a>
            </li>

            <li class="page-item @(currentPage == totalPage ? "disabled" : "")">
                <a href="@Url.Action("ViewMeterList", new { page = totalPage, status = Context.Request.Query["status"],ProjectNameFilter = Context.Request.Query["Project"], msnFilter = Context.Request.Query["msnFilter"], createdByFilter = Context.Request.Query["createdByFilter"], createdAtFilter = Context.Request.Query["createdAtFilter"],  mapFlag = ViewData["MapFlag"], pageSize = ViewData["pageSize"] })">&raquo;&raquo;</a>
            </li>
        }
    </ul>
</div>

