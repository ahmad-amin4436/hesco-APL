        display: grid !important;
    }

    .c-filters {
        margin-left: auto;
        margin-right: auto;
    }

    .table-success {
        background-color: red !important;
        color: black !important;
    }

    .pagination-list {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .page-item {
        margin: 0 2px;
    }

        .page-item a {
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid #ddd;
            color: #007bff;
            display: inline-block;
        }

        .page-item.active a {
