        $(document).ready(function () {
            $(".filter-input").on("keyup", function () {
                let input = $(this);
                let filterType = input.data("filter");
                let searchTerm = input.val();

                if (searchTerm.length < 4) {
                    $("#suggestions-" + filterType).html("").hide();
                    return;
                }

                $.ajax({
                    url: '@Url.Action("GetMeterFilteredSuggestions", "Meter")',
                    type: "GET",
                    data: { searchTerm: searchTerm, filterType: filterType },
                    success: function (response) {
                        let suggestionsBox = $("#suggestions-" + filterType);
                        suggestionsBox.html("");
                        if (response.suggestions.length > 0) {
                            response.suggestions.forEach(item => {
                                suggestionsBox.append("<li class='suggestion-item'>" + item + "</li>");
                            });
                            suggestionsBox.show();
                        } else {
                            suggestionsBox.hide();
                        }
                    }
                });
            });

            $(document).on("click", ".suggestion-item", function () {
                let selectedValue = $(this).text().trim(); // Get clicked suggestion text
                let parentInput = $(this).closest(".suggestion-container").find(".filter-input");

                parentInput.val(selectedValue); // Set input value
                parentInput.data("selected-value", selectedValue); // Store it separately for tracking

                $(".suggestions-box").hide(); // Hide suggestion box

                // Automatically trigger filtering after selecting a suggestion
                reloadMSN(@(page));  // Reload with selected Subdivision filter
            });

            var pageSize = $('#hiddenPageSize').val(); // Get the selected page size from the hidden field

            if (pageSize) {
                $('#pageSizeSelector').val(pageSize); // Set the selected value
            }
            $('#exportExcelBtn').on('click', function () {
                exportToExcel(@(page));
            });
            $('#pageSizeSelector').on('change', function () {
                var selectedPageSize = $(this).val();
                reloadMSN(1, selectedPageSize); // Reload with the selected page size
            });
            $('.filter-dropdown').select2({
                multiple: true,
                dropdownAutoWidth: true
            });
            $('.c-filters').on('change', function () {
                reloadMSN(@(page));
            });


            // Set the selected values for the select element
            // $('#msnFilter').val([@(msn)]).trigger('change.select2');
            $('#status').val([@Html.Raw(Json.Serialize(Status.Split(",").ToList()))]).trigger('change.select2');
            // $('#status').val([@(Status)]).trigger('change.select2');
            $('#createdByFilter').val([@(CreatedBy)]).trigger('change.select2');
            $('#mapflagFilter').val([@(mapflag)]).trigger('change.select2');
            $('#ProjectNameFilter').val([@(ProjectNameFilter)]).trigger('change.select2');

            $('#clearFiltersBtn').on('click', function () {
                var pageSize = $('#pageSizeSelector').val();
                window.location.href = '@Url.Action("ViewMeterList")' + '?pageSize=' + pageSize;
            });
        });

