@model HESCO.Models.MeterDataViewModel

@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
    <div class="card">
        <div class="card-body p-3">
            <h1>Confirm Delete</h1>
            <p>Are you sure you want to delete the meter with MSN: @Model.MSN?</p>

            <form asp-action="DeleteMeter" method="post">
                <input type="hidden" name="id" value="@Model.MeterId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("ViewMeterList", "Meter")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>