@model HESCO.Models.Complaint.MetersReceiptModel

@{
    ViewData["Title"] = "ReceivedMetersReceipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="card" style="background-color:blanchedalmond">
                <div class="card-body p-3">
                    <h1 style="text-align:center">Meters Receipt</h1>

                    <form id="ReceivedMetersReceiptForm" asp-action="ReceivedMetersReceipt" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <select id="MSNFilter" class="filter-dropdown form-control c-filters" name="MSNs" multiple="multiple" style="width:100%" asp-items="ViewBag.SelectMSN"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Received" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a href="@Url.Action("ReceivePendingList", "Complaint")" class="btn btn-success">Back to List</a>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('.filter-dropdown').select2({
                multiple: true,
                dropdownAutoWidth: true
            });
        });
    </script>
}
