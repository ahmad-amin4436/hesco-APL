@model HESCO.Models.Complaint.FaultyMetersEditViewModel

@{
    ViewData["Title"] = "Edit FaultMeter";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var signedInUserId = ViewBag.SignedInUserId;
    string fmsn = ViewData["FMSN"]?.ToString() ?? "";
    string fat = ViewData["FAT"]?.ToString() ?? "";
    // string fsdn = ViewData["FSDN"]?.ToString() ?? "";
    string issueDescription = ViewData["IssueDescription"]?.ToString() ?? "";
    string Status = ViewData["Status"]?.ToString() ?? "";
    string fReportedBy = ViewData["FRB"]?.ToString() ?? "";
    string fdataReset = ViewData["DR"]?.ToString() ?? "";
    int page = int.Parse(ViewData["page"]?.ToString() ?? "1");
    int pageSize = int.Parse(ViewData["pageSize"]?.ToString() ?? "1");
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="card" style="background-color:blanchedalmond">
                <div class="card-body p-3">
                    <h1 style="text-align:center">Edit Faulty Meter</h1>
                    <form asp-action="EditFaultyMeter" method="post" id="editFaultyMeterForm" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="form-group">
                            <label asp-for="MSN" class="control-label"></label>
                            <input asp-for="MSN" class="form-control" readonly />
                            <span asp-validation-for="MSN" class="text-danger"></span>
                        </div>
                     @*    <div class="form-group">
                            <label asp-for="SubDiv" class="control-label"></label>
                            <input asp-for="SubDiv" class="form-control" readonly />
                            <span asp-validation-for="SubDiv" class="text-danger"></span>
                        </div> *@
                        <div class="form-group">
                            <label asp-for="OpenDescription" class="control-label"></label>
                            <input asp-for="OpenDescription" class="form-control" readonly />
                            <span asp-validation-for="OpenDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group" id="faultDescriptionWrapper">
                            <label asp-for="Fault_Description" class="control-label"></label>
                            <div id="faultDescriptionList">
                                <input asp-for="Fault_Description" class="form-control" name="FaultDescriptions[]" />
                            </div>
                            <button type="button" id="confirm-faultDescription-btn" class="btn btn-success">+</button>
                            <button type="button" id="cancel-faultDescription-btn" class="btn btn-danger">✘</button>
                            <span asp-validation-for="Fault_Description" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="remarksWrapper">
                            <label asp-for="Remarks" class="control-label"></label>
                            <div id="remarksList">
                                <input asp-for="Remarks" class="form-control" name="remarks[]" />
                            </div>
                            <button type="button" id="confirm-remarks-btn" class="btn btn-success">+</button>
                            <button type="button" id="cancel-remarks-btn" class="btn btn-danger">✘</button>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="dispatchedRemarksWrapper">
                            <label asp-for="Dispatched_Remarks" class="control-label"></label>
                            <input asp-for="Dispatched_Remarks" class="form-control" />
                            <span asp-validation-for="Dispatched_Remarks" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control" id="statusDropdown">
                                <option value="0">Open</option>
                                <option value="1">Executed</option>
                                @if (!((List<int>)ViewBag.SiteOfficerList).Contains(ViewBag.SignedInUserId))
                                {
                                    <option value="2">Verified</option>
                                }
                                <option value="3">Dispatched</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="verifiedDropdown">
                            <label for="Verified">Verified</label>
                            <select id="Verified" name="Verified" class="form-control">
                                <option value="">Select option</option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                            <span asp-validation-for="Verified" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="DataReset" name="DataReset" value="1" @(Model.DataReset == 1 ? "checked" : "") />
                                <label class="form-check-label" for="DataReset">Data Reset</label>
                            </div>
                            <span asp-validation-for="DataReset" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="FaultyImages">Attach Fault_Report / Photo</label>
                            <input type="file" name="FaultyImages" id="FaultyImages" multiple class="form-control"
                                   accept=".png,.jpeg,.jpg,.pdf,.doc,.docx,.xls,.xlsx" />
                            <small class="form-text text-muted">You can upload up to 10 files. Allowed formats: PNG, JPEG, JPG, PDF, DOC, DOCX, XLS, XLSX.</small>
                        </div>

                        <div class="form-group">
                            <input type="submit" id="complaintformbtn" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a href="@Url.Action("ViewFaultyMeters", "Complaint", new {
                        fmsn = ViewData["FMSN"],
                        fat = ViewData["FAT"],
                        issueDescription = ViewData["IssueDescription"],
                        status = ViewData["Status"],
                        executedDate = ViewData["ExecutedDate"],
                        fReportedBy = ViewData["FRB"],
                        fdataReset = ViewData["DR"],
                        page = ViewData["page"],
                        pageSize = ViewData["pageSize"]
                    })" class="btn btn-success">Back to List</a>
    </div>
</div>

