                if (newDescription !== "") {
                    var combinedDescription = existingDescription + (existingDescription ? "; " : "") + newDescription;
                    $("#faultDescriptionList input[name='FaultDescriptions[]']").first().val(combinedDescription);
                    $("#faultDescriptionList input[name='FaultDescriptions[]']").last().remove(); // Remove the new input field
