@model IEnumerable<HESCO.Models.ActionInfo>

@{
    ViewData["Title"] = "Edit Role Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card" style="background-color:blanchedalmond">
                <div class="card-body p-3">
                    <h2 style="text-align:center">Edit Role: @ViewBag.Name</h2>

                    <!-- If you want to save changes, keep the form. Otherwise, remove it for "view only." -->
                    <form asp-action="EditRoleDetails" method="post" id="editRoleForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" id="RoleName" name="Name" value="@ViewBag.Name" />
                        <!-- Optional: If you want to edit the role name, uncomment:
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        -->

                        <div class="form-group">
                            <label class="control-label">Select Permissions</label>
                            <div id="menuContainer">

                                @if (Model != null)
                                {
                                    foreach (var permission in Model)
                                    {
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="menu-group">

                                                    <!-- Toggle for showing/hiding children -->
                                                    <span class="toggle" data-target="#children_@permission.Id">+</span>

                                                    <!-- Parent checkbox -->
                                                    <input type="checkbox"
                                                           class="parent-menu"
                                                           id="menu_@permission.Id"
                                                           name="selectedMenuIds"
                                                           value="@permission.Id"
                                                    @(ViewBag.AssignedActionIds.Contains(permission.Id) ? "checked" : "") />

                                                    <label for="menu_@permission.Id">@permission.Controller (@permission.Action)</label>

                                                    <!-- Child container (initially hidden via script or CSS) -->
                                                    <div class="children" id="children_@permission.Id">
                                                        <ul>
                                                            @foreach (var child in permission.SubActions)
                                                            {
                                                                if (child.SubActions == null || child.SubActions.Count == 0)
                                                                {
                                                                    <!-- Simple child (no sub-children) -->
                                                                    <li>
                                                                        <div class="child-item">
                                                                            <input type="checkbox"
                                                                                   class="child-menu"
                                                                                   data-parent-id="@permission.Id"
                                                                                   id="menu_@child.Id"
                                                                                   name="selectedMenuIds"
                                                                                   value="@child.Id"
                                                                            @(ViewBag.AssignedActionIds.Contains(child.Id) ? "checked" : "") />
                                                                            <label for="menu_@child.Id">@child.Action</label>
                                                                        </div>
                                                                    </li>
                                                                }
                                                                else
                                                                {
                                                                    <!-- Child that itself has sub-children -->
                                                                    <li>
                                                                        <div class="child-item">
                                                                            <!-- Toggle for grand-children -->
                                                                            <span class="toggle" data-target="#children1_@child.Id">+</span>

                                                                            <input type="checkbox"
                                                                                   class="parent1-menu child-menu"
                                                                                   data-parent-id="@permission.Id"
                                                                                   id="menu_@child.Id"
                                                                                   name="selectedMenuIds"
                                                                                   value="@child.Id"
                                                                            @(ViewBag.AssignedActionIds.Contains(child.Id) ? "checked" : "") />

                                                                            <label for="menu_@child.Id">@child.Action</label>

                                                                            <div class="children1" id="children1_@child.Id">
                                                                                <ul>
                                                                                    @foreach (var subChild in child.SubActions)
                                                                                    {
                                                                                        <li>
                                                                                            <input type="checkbox"
                                                                                                   class="child1-menu"
                                                                                                   data-parent-id="@child.Id"
                                                                                                   id="menu_@subChild.Id"
                                                                                                   name="selectedMenuIds"
                                                                                                   value="@subChild.Id"
                                                                                            @(ViewBag.AssignedActionIds.Contains(subChild.Id) ? "checked" : "") />
                                                                                            <label for="menu_@subChild.Id">@subChild.Action</label>
                                                                                        </li>
                                                                                    }
                                                                                </ul>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                }
                                                            }
                                                        </ul>
                                                    </div> <!-- .children -->
                                                </div> <!-- .menu-group -->
                                            </div> <!-- .col-md-4 -->
                                        </div> <!-- .row -->
                                    }
                                }
                            </div> <!-- #menuContainer -->
                        </div> <!-- .form-group -->
                        <!-- If you want to save the selection -->
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div> <!-- .card-body -->
            </div> <!-- .card -->
        </div> <!-- .col-md-12 -->
    </div> <!-- .row -->
</div> <!-- .container -->

<div>
    <a href="@Url.Action("ViewRoles", "Roles")" class="btn btn-success">Back to List</a>
</div>



@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            // Hide child containers by default (optional, if you want them hidden initially)
            $(".children, .children1").hide();


            // Expand/Collapse Functionality
            $(".toggle").click(function () {
                let target = $(this).data("target");
                $(target).toggle();
                $(this).text($(target).is(":visible") ? "-" : "+");
            });

            // 1) Parent checkbox toggles all its immediate children
            $(".parent-menu").change(function () {
                let isChecked = $(this).is(":checked");
                let parentId = $(this).attr("id").split("_")[1];

                // .child-menu or .parent1-menu that has data-parent-id=parentId
                $(`.child-menu[data-parent-id='${parentId}'],
                           .parent1-menu[data-parent-id='${parentId}']`)
                    .prop("checked", isChecked);
            });

            // 2) For items that have sub-children (parent1-menu),
            //    checking them toggles .child1-menu
            $(".parent1-menu").change(function () {
                let isChecked = $(this).is(":checked");
                let parent1Id = $(this).attr("id").split("_")[1];

                // Check/uncheck grand-children
                $(`.child1-menu[data-parent-id='${parent1Id}']`).prop("checked", isChecked);
            });

            // 3) When a child-menu is toggled, update its parent
            $(".child-menu").change(function () {
                let parentId = $(this).data("parent-id");

                if ($(this).is(":checked")) {
                    // If any child is checked, ensure the parent is checked
                    $(`#menu_${parentId}`).prop("checked", true);
                } else {
                    // If no siblings are checked, uncheck the parent
                    let siblingsChecked = $(`.child-menu[data-parent-id='${parentId}']:checked`).length > 0;
                    if (!siblingsChecked) {
                        $(`#menu_${parentId}`).prop("checked", false);
                    }
                }
            });

            // 4) When a grand-child (.child1-menu) is toggled, update its parent & grandparent
            $(".child1-menu").change(function () {
                let parentId = $(this).data("parent-id");      // e.g. the "child" that holds subChild
                let parentCheckbox = $(`#menu_${parentId}`);   // That parent's checkbox

                if ($(this).is(":checked")) {
                    parentCheckbox.prop("checked", true);

                    // Also check the grandparent if it exists
                    let grandParentId = parentCheckbox.data("parent-id");
                    if (grandParentId) {
                        $(`#menu_${grandParentId}`).prop("checked", true);
                    }
                } else {
                    // If no siblings are checked, uncheck the parent
                    let siblingsChecked = $(`.child1-menu[data-parent-id='${parentId}']:checked`).length > 0;
                    if (!siblingsChecked) {
                        parentCheckbox.prop("checked", false);

                        // Possibly uncheck the grandparent if it has no other children checked
                        let grandParentId = parentCheckbox.data("parent-id");
                        if (grandParentId) {
                            let grandSiblingsChecked = $(`.child-menu[data-parent-id='${grandParentId}']:checked`).length > 0;
                            if (!grandSiblingsChecked) {
                                $(`#menu_${grandParentId}`).prop("checked", false);
                            }
                        }
                    }
                }
            });
        });
    </script>

}

<style>
    .toggle {
        font-weight: bold;
        cursor: pointer;
        margin-right: 5px;
    }

    .menu-group {
        margin-bottom: 10px;
    }

    .children {
        display: none;
        margin-left: 30px;
    }

    .child-item {
        margin-bottom: 5px;
    }

    .row {
        margin-bottom: 15px;
    }
</style>